### Add User ###
def adduser(arg1,arg2):
    dependants = ['cmdexec']
    p = detectplatform()
    if p == 'linux':
        cmdexec("useradd "+arg1)
        cmdexec("echo "+arg1+":"+arg2+" | chpasswd")
    else:
        cmdexec("NET USER "+arg1+" "+arg2+" /ADD")

### Delete User ###
def deleteuser(arg1):
    dependants = ['cmdexec']
    p = detectplatform()
    if p == 'linux':
        cmdexec("deluser "+arg1)
    else:
        cmdexec("NET USER "+arg1+" /DELETE")
