### Function to run OS level commands ###
def cmdexec(arg1):
    import subprocess
    cmd = arg1.split()
    subprocess.call(cmd)

### Detect Platform ###
def detectplatform():
    import sys
    if sys.platform == 'linux2':
        return "linux"
    elif sys.platform == 'win32':
        return "windows"
    elif sys.platform == 'darwin':
        return "mac"
    else:
        return "unrecognised"
