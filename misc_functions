### Function to run OS level commands ###
def cmdexec(arg1):
    import subprocess
    cmd = arg1.split()
    subprocess.call(cmd)

### Function to generate random 6-digit number to assign as JobID ###
def jobid():
    import random
    id = random.randint(100000000,999999999)
    return id

### Detect Platform ###
def detectplatform():
    import sys
    if sys.platform == 'linux2':
        return "linux"
    elif sys.platform == 'win32':
        return "windows"
    elif sys.platform == 'darwin':
        return "mac"
    else:
        return "unrecognised"
