### Function to run OS level commands ###
def cmdexec(command):
    import subprocess
    cmd = command.split()
    subprocess.call(cmd)

### Detect Platform ###
def detectplatform():
    import sys
    if sys.platform == 'linux2':
        return "linux"
    elif sys.platform == 'win32':
        return "windows"
    elif sys.platform == 'darwin':
        return "mac"
    else:
        return "unrecognised"

### Save Config ###
def saveconfig(configuration,name,path=""):
    repopath = '/home/test'
    sc = open((repopath+path+name).encode('string-escape'),"w")
    sc.write(configuration)
    sc.close()

### Generate Config ID ###
def genid():
    import string
    import random
    return ''.join(random.SystemRandom().choice(string.ascii_letters + string.digits) for _ in range(9))
