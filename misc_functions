### Function to run OS level commands ###
def cmdexec(arg1):
    import subprocess
    cmd = arg1.split()
    subprocess.call(cmd)

### Detect Platform ###
def detectplatform():
    import sys
    if sys.platform == 'linux2':
        return "linux"
    elif sys.platform == 'win32':
        return "windows"
    elif sys.platform == 'darwin':
        return "mac"
    else:
        return "unrecognised"

### ID Generator ###
def genid():
    import string
    import random
    return ''.join(random.choice(string.ascii_lowercase + string.digits) for _ in range(8))

